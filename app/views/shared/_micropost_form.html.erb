<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("microposts.compose_new") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: "image/jpeg, image/gif, image/png" %>
  </span>
  <%= f.submit t "microposts.post", class: "btn btn-primary" %>
<% end %>

<%= javascript_pack_tag "image_valdition" %>
