<% provide :title, t("edit_user.title") %>
<% provide :form_url, user_path(current_user) %>
<% provide :button_text, t("edit_user.save_changes") %>
<h1><%= t("edit_user.heading") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("user_edit.change"), "https://gravatar.com/emails", target: "_blank" %>
    </div>
  </div>
</div>
